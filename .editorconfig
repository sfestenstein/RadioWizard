# =============================================================================
# RadioWizard EditorConfig
# =============================================================================
# Helps maintain consistent coding styles across different editors and IDEs
# =============================================================================

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 3

# C/C++ files
[*.{c,cc,cpp,cxx,h,hh,hpp,hxx}]
indent_size = 3

# CMake files
[CMakeLists.txt]
indent_size = 3

[*.cmake]
indent_size = 3

# Python files (Conan)
[*.py]
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Proto files
[*.proto]
indent_size = 3

# Shell scripts
[*.sh]
indent_size = 2

# Batch files
[*.{bat,cmd}]
end_of_line = crlf
